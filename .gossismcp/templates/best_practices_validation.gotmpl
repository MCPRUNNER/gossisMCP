{{/* best_practices_validation.gotmpl */}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SSIS Best Practices Validation</title>
  <link rel="stylesheet" href="gossismcp.css">
   
</head>
<body>
  <div class="container">
    <header>
      <h1>SSIS Best Practices Validation</h1>
      <p class="subtitle">Validation of best practices across all SSIS packages</p>
    </header>
    
    <div class="content">
      {{ $rows := index . "data" }}
      {{ if gt (len $rows) 0 }}
      <div class="stats">
        <div class="stat-card">
          <div class="stat-label">Total Packages</div>
          <div class="stat-value">{{ len $rows }}</div>
        </div>
      </div>
      
      <div class="table-wrapper">
        <table>
    <thead>
      <tr>
        <th>Package</th>
        <th>Status</th>
        <th>Timestamp</th>
        <th>Validation Results</th>
      </tr>
    </thead>
    <tbody>
{{ range $rows }}
      <tr>
        <td class="package-name mono wrap">{{ index . "package" }}</td>
        <td>
          {{- $status := index . "status" -}}
          {{- if eq $status "success" -}}
            <span class="status-success">success</span>
          {{- else -}}
            <span class="status-error">{{ $status }}</span>
          {{- end -}}
        </td>
        <td class="timestamp mono">{{ index . "timestamp" }}</td>
        <td>
          <pre class="mono">{{ index . "results" }}</pre>
        </td>
      </tr>
{{ end }}
    </tbody>
      </table>
      </div>
      {{ else }}
      <div class="no-data">
        <p>No data available.</p>
      </div>
      {{ end }}
      
      <footer>
        Generated by SSIS Analyzer MCP | Workflow-based Package Analysis
      </footer>
    </div>
  </div>
</body>
</html>